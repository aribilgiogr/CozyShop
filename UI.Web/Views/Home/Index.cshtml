@model UI.Web.Models.HomeIndexViewModel

@{
    ViewBag.Title = "Index";
}

@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <!-- Start Banner Hero -->
    <div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.FeaturedProducts.Count(); i++)
            {
                <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="@i" class="@(i==0?"active":"")"></li>
            }
        </ol>
        <div class="carousel-inner">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="carousel-item @(product == Model.FeaturedProducts.First() ? "active" : "")">
                    <div class="container">
                        <div class="row p-5">
                            <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                                <img class="img-fluid" src="https://placehold.co/800x600?text=@product.Cover" alt="@product.Name">
                            </div>
                            <div class="col-lg-6 mb-0 d-flex align-items-center">
                                <div class="text-align-left align-self-center">
                                    <h1 class="h1 text-success">@product.Name</h1>
                                    <h3 class="h2">@product.ProductType</h3>
                                    <p>@product.ShortDescription</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
            <i class="fas fa-chevron-left"></i>
        </a>
        <a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
            <i class="fas fa-chevron-right"></i>
        </a>
    </div>
    <!-- End Banner Hero -->

    <!-- Start Categories of The Month -->
    <section class="container py-5">
        <div class="row text-center pt-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1">Categories of The Month</h1>
                <p>
                    Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia
                    deserunt mollit anim id est laborum.
                </p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.NewCategories)
            {
                <div class="col-12 col-md-4 p-5 mt-3 text-center">
                    <div class="card h-100 shadow">
                        <div class="card-body">
                            <i class="fas fa-mug-hot fa-2x"></i>
                            <h5 class="mt-3 mb-3">@item.Name</h5>
                            <p class="text-dark">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    <!-- End Categories of The Month -->

    <!-- Start Featured Product -->
    <section class="bg-light">
        <div class="container py-5">
            <div class="row text-center py-3">
                <div class="col-lg-6 m-auto">
                    <h1 class="h1">New Arrivals</h1>
                    <p>
                        Reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
                        Excepteur sint occaecat cupidatat non proident.
                    </p>
                </div>
            </div>
            <div class="row">
                @foreach (var product in Model.NewArrivals)
                {
                    <div class="col-12 col-md-4 mb-4">
                        <div class="card h-100">
                            <a href="#">
                                <img src="https://placehold.co/800x600?text=@product.Cover" class="card-img-top" alt="@product.Name">
                            </a>
                            <div class="card-body">
                                <ul class="list-unstyled d-flex justify-content-between">
                                    <li>
                                        @for (int i = 0; i < product.Rating; i++)
                                        {
                                            <i class="text-warning fa fa-star"></i>
                                        }
                                        @for (int i = 0; i < 5 - product.Rating; i++)
                                        {
                                            <i class="text-muted fa fa-star"></i>
                                        }
                                    </li>
                                    <li class="text-muted text-right">$@product.DiscountedPrice</li>
                                </ul>
                                <a href="#" class="h2 text-decoration-none text-dark">@product.CategoryName</a>
                                <p class="card-text">
                                    @product.ShortDescription
                                </p>
                                <p class="text-muted">Reviews (@product.ReviewCount)</p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
    <!-- End Featured Product -->
}