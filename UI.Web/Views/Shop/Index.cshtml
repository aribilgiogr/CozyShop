@model UI.Web.Models.ShopIndexViewModel

@{
    ViewBag.Title = "Index";
}

<!-- Start Content -->
<div class="container py-5">
    <div class="row">

        <div class="col-lg-3">
            <h2 class="pb-4">Kategoriler</h2>
            <div class="list-group list-group-flush">
                @foreach (var category in Model.Categories)
                {
                    <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@category.Name</h5>
                        </div>
                        <small class="text-muted">@category.Description</small>
                    </a>
                }
            </div>
            <h2 class="pb-4">Menşe Ülkeler:</h2>
            <div class="list-group list-group-flush">
                @foreach (var origin in Model.OriginCountries)
                {
                    <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@origin</h5>
                        </div>
                    </a>
                }
            </div>
        </div>

        <div class="col-lg-9">
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-inline shop-top-menu pb-3 pt-1">
                        <li class="list-inline-item">
                            <a class="h3 text-dark text-decoration-none mr-3" href="#">All</a>
                        </li>
                        @foreach (var item in Enum.GetValues(typeof(Core.Concrete.Enums.ProductType)))
                        {
                            <li class="list-inline-item">
                                <a class="h3 text-dark text-decoration-none mr-3" href="#">@item</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-md-6 pb-4">
                    <div class="d-flex">
                        <select class="form-control">
                            <option>Featured</option>
                            <option>A to Z</option>
                            <option>Item</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var product in Model.SearchResult.Products)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 product-wap rounded-0">
                            <div class="card rounded-0">
                                <img class="card-img rounded-0 img-fluid" src="https://placehold.co/800x600?text=@product.Cover">
                                <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                    <ul class="list-unstyled">
                                        <li><a class="btn btn-success text-white mt-2" href="#"><i class="fas fa-cart-plus"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body">
                                <a href="#" class="h3 text-decoration-none">@product.Name</a>
                                <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                    <li>@product.ProductType</li>
                                    <li>@product.CategoryName</li>
                                </ul>
                                <ul class="list-unstyled d-flex justify-content-center mb-1">
                                    <li>
                                        @for (int i = 0; i < product.Rating; i++)
                                        {
                                            <i class="text-warning fa fa-star"></i>
                                        }
                                        @for (int i = 0; i < 5 - product.Rating; i++)
                                        {
                                            <i class="text-muted fa fa-star"></i>
                                        }
                                    </li>
                                </ul>
                                <p class="text-center mb-0">
                                    @if (product.DiscountRate > 0)
                                    {
                                        <del class="text-danger">₺@product.BasePrice</del>
                                        <strong>₺@product.DiscountedPrice</strong>
                                    }
                                    else
                                    {
                                        <strong>₺@product.BasePrice</strong>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div div="row">
                <ul class="pagination pagination-lg justify-content-end">
                    <li class="page-item disabled">
                        <a class="page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0" href="#" tabindex="-1">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 text-dark" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link rounded-0 shadow-sm border-top-0 border-left-0 text-dark" href="#">3</a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>
<!-- End Content -->